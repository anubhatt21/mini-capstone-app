<h1> Product Information </h1>
<% @product %>
<p>
  
  Name: <%= @product.name %>  
  <h4> Categories:</h4>
  <ul> 
  <% @product.categories.each do |category| %>
  <li> <%= category.name %></li>
  <% end %>
  </ul>
  <h5> Made By: <%= @product.supplier.name %> </h5><br>
  Price: <%= number_to_currency(@product.price) %> <br>
  Images: 
  <% @product.images.each do |image| %> 
    <img src="<%= image.url %>" alt="product.name">
  <% end %>
  <br> 
  Description: <%= @product.description %> <br>
  <% if @product.discounted? %>
    "Discounted!"
  <% end %>
   <br>
  Estimated tax: <%= number_to_currency(@product.tax) %> <br>
  Total: <%= number_to_currency(@product.total) %> 
  
  </p>

  <%= form_tag "/products/#{@product.id}" , method: :delete do %>
<input type="Submit" value="Destroy product">
  <% end %>

  <%= form_tag "/carted_products", method: :post do %>
<input type="text" class="btn btn-default" name="quantity" placeholder="Add quantity">
<input type="hidden" class="btn btn-default" name="product_id" value="<%= @product.id %>">
<input type="Submit" class="btn btn-default" value="Add to Cart!!!">
  <% end %>



  

